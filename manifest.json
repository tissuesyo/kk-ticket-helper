{
  "manifest_version": 3,
  "name": "KKTIX Helper",
  "version": "1",
  "description": "KKTIX 搶票小幫手",
  "icons": {
    "16": "/img/logo_16x16.png",
    "48": "/img/logo_48x48.png",
    "128": "/img/logo_128x128.png"
  },
  "permissions": ["activeTab", "tabs", "storage", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "KKTIX 搶票小幫手",
    "default_icon": {
      "16": "/img/logo_16x16.png",
      "48": "/img/logo_48x48.png",
      "128": "/img/logo_128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://kktix.com/events/*/registrations/new"],
      "run_at": "document_start",
      "js": ["js/ticket.js"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "MacCtrl+Shift+K"
      },
      "description": "Opens popup.html"
    }
  }
}
